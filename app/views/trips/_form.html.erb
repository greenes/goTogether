<div class='form'>
  <% if @trip.errors.any? %>

    <% @trip.errors.full_messages.each do |err|%>
      <p class='error'><%=err%></p>
    <%end%>

  <%end%>

    <%= form_for [@trip] do |f| %>
      <p>
      <%= f.label :trip_name %>
      <%= f.text_field :trip_name  %>
      </p>

      <p>
      <%= f.label :trip_location %>
      <%= f.text_field :trip_location %>
      </p>

      <p>
      <%= f.label :trip_dates %>
      <%= f.text_field :trip_dates %>
      </p>

      <%= f.hidden_field :user_id, :value => current_user.id %>

      <p>
      <%= f.submit %>
      </p>

    <%end%>

    <% if @trip.id != nil %>
    <p class='button'><%=link_to "back to trip", trip_path(@trip)%></p>
    <%end%>

  </div>
